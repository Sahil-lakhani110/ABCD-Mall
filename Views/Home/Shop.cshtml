@using Lakhani.Models
@model IEnumerable<Lakhani.Models.Shops>

@{
    ViewData["Title"] = "Shops";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ===================== BANNER SECTION ===================== -->
<div id="mallBannerCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">

        <div class="carousel-item active">
            <img src="~/ShopImage/Banner 1.png" class="d-block w-100 banner-img" alt="Shopping Center 1">
            <div class="carousel-caption d-none d-md-block">
                <h3 class="fw-bold">Welcome to ABCD Mall</h3>
                <p>Experience premium shopping & lifestyle</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/ShopImage/Banner 2.png" class="d-block w-100 banner-img" alt="Shopping Center 2">
            <div class="carousel-caption d-none d-md-block">
                <h3 class="fw-bold">Top Brands Under One Roof</h3>
                <p>Fashion • Electronics • Dining</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/ShopImage/Banner 3.png" class="d-block w-100 banner-img" alt="Shopping Center 3">
            <div class="carousel-caption d-none d-md-block">
                <h3 class="fw-bold">Shop. Dine. Enjoy.</h3>
                <p>Your perfect shopping destination</p>
            </div>
        </div>

    </div>

    <!-- Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#mallBannerCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mallBannerCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- ===================== SHOPS SECTION ===================== -->
<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Our Shops</h2>
        <p class="text-muted">Explore stores available in the mall</p>
    </div>

    <div class="row g-4 justify-content-center">
        @if (Model != null && Model.Any())
        {
            int counter = 0;

            foreach (var shop in Model)
            {
                <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                    <div class="card h-100 shadow-sm border-0 shop-card text-center">
                        <img src="~/ShopImage/@shop.Image"
                             class="card-img-top p-3"
                             alt="@shop.ShopName"
                             style="height:120px; object-fit:contain;">

                        <div class="card-body p-2">
                            <h6 class="fw-semibold mb-1">@shop.ShopName</h6>
                            <p class="text-muted small mb-0">@shop.Description</p>
                        </div>
                    </div>
                </div>

                counter++;

                if (counter % 12 == 0)
                {
                    <div class="col-12 my-4">
                        <hr />
                    </div>
                }
            }
        }
        else
        {
            <div class="text-center text-muted">
                <p>No shops added yet.</p>
            </div>
        }
    </div>
</div>
<style>
    .banner-img {
        height: 400px;
        object-fit: cover;
        border-radius: 12px;
    }

    .carousel-caption {
        background: rgba(0,0,0,0.5);
        padding: 15px;
        border-radius: 10px;
    }

    .shop-card {
        transition: all 0.3s ease;
        border-radius: 12px;
        cursor: pointer;
    }

        .shop-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }
</style>