@model Lakhani.Models.MovieBookings

@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="card shadow-lg p-4 col-md-6 mx-auto">

        <h3 class="text-center mb-4 fw-bold">Card Payment</h3>

        @if (TempData["PayError"] != null)
        {
            <div class="alert alert-danger">
                @TempData["PayError"]
            </div>
        }

        <p><strong>Name:</strong> @Model.UserName</p>
        <p><strong>Movie:</strong> @Model.Movie?.MovieName</p>
        <p><strong>Seats:</strong> @Model.SeatsBooked</p>
        <p><strong>Total Amount:</strong> Rs @Model.Amount</p>

        <hr />

        <form asp-controller="Movie" asp-action="PaymentSuccess" method="post">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="mb-3">
                <label class="form-label">Card Number</label>
                <input type="text" name="CardNumber" class="form-control" maxlength="16" placeholder="1234123412341234" required />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Expiry (MM/YY)</label>
                    <input type="text" name="Expiry" class="form-control" placeholder="12/28" required />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">CVV</label>
                    <input type="password" name="CVV" class="form-control" maxlength="3" placeholder="123" required />
                </div>
            </div>

            <button type="submit" class="btn btn-success w-100">
                Pay Now
            </button>
        </form>

    </div>
</div>
